{% extends 'AcmeRememberSeriesBundle:Default:index.html.twig' %}



{% block body %}
    <form action="{{ path('acme_remember_series_create') }}" method="post" {{ form_enctype(form) }}>

        {{ form_errors(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form._token) }}

        <input type="submit" value="add" />
    </form>

    <ul>
    {% for item in series %}
        <li>
            <a href="{{ path('acme_remember_series_single_page', { 'series_id': item.id }) }}">{{ item.name }}</a>
            <a href="{{ path('acme_remember_series_remove', { 'series_id': item.id }) }}">remove</a>
            {% if attribute(item, "getUsers").first().getWatched() %}
                <a href="{{ path('acme_remember_series_set_watched', { 'series_id': item.id, 'is_watched': 0 }) }}">set not watched</a>
            {% else %}
                <a href="{{ path('acme_remember_series_set_watched', { 'series_id': item.id, 'is_watched': 1 }) }}">set watched</a>
            {% endif %}
        </li>
    {% endfor %}
    </ul>
{% endblock %}
